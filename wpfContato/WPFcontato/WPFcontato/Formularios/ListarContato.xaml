<Window x:Class="WPFcontato.Formularios.ListarContato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFcontato.Formularios"
        mc:Ignorable="d"
        Title="ListarContato" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF9CDC79" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="LISTA:" HorizontalAlignment="Center" Margin="0,43,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Background="#FF9CDC79" Width="60"/>
        <DataGrid x:Name="dtg" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,112,0,0"/>

    </Grid>
</Window>
